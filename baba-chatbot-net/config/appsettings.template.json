{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=BabaChatbot;User Id=baba;Password=YOUR_PASSWORD;TrustServerCertificate=true;"
  },
  "Twilio": {
    "AccountSid": "ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
    "AuthToken": "your_auth_token_here",
    "PhoneNumber": "+1234567890",
    "ValidateSignature": true
  },
  "Llm": {
    "BaseUrl": "http://localhost:11434",
    "ApiKey": "",
    "Model": "llama2",
    "Temperature": 0.7,
    "MaxTokens": 500,
    "RequestTimeout": 30
  },
  "Rag": {
    "Enabled": true,
    "VectorStorePath": "./data/rag_index",
    "TopK": 5,
    "MinimumScore": 0.7,
    "PromptsPath": "./config/prompts"
  },
  "Catalog": {
    "Source": "File",
    "FilePath": "./data/catalog/cars_extract.json",
    "ConnectionString": "",
    "CacheExpirationMinutes": 60
  },
  "Caching": {
    "Provider": "Memory",
    "Redis": {
      "ConnectionString": "localhost:6379",
      "InstanceName": "BabaChatbot:"
    },
    "ExpirationMinutes": 30,
    "MaxSize": 100
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Baba.Chatbot": "Debug"
    },
    "Console": {
      "Enabled": true
    },
    "File": {
      "Enabled": true,
      "Path": "./logs/baba-chatbot-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7
    }
  },
  "Conversation": {
    "MaxHistoryMessages": 10,
    "SessionTimeoutMinutes": 30,
    "EnableGuardrails": true
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },
  "AllowedHosts": "*"
}

